<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F4F8"
    tools:context=".activities.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageViewUserIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person_placeholder"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Guest"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonTracking"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_blue"
            android:text="TRACKING STATUS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonEmergencyContacts"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_green"
            android:text="EMERGENCY CONTACTS"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_red"
            android:text="PROFILE / LOGOUT"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- System Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Accident Detection:"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/status_dot_ready"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/status_dot_green"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/textViewStatusReady"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textViewUserInfo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="User:"
                        android:textSize="16sp"/>
                    <ImageView
                        android:id="@+id/status_dot_login"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/status_dot_red"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/textViewUserStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not logged in" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>